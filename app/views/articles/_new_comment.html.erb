    <div class="form-group">
      <%= f.label :body, "Kommentar *" %>
      <%= f.text_area :body, class: "form-control comment-control", :required => true%>
    </div>
    <div class="form-group">
      <%= f.label :name, "Name *" %>
      <%= f.text_field :name, class: "form-control", :required => true%>
    </div>
    <div class="form-group">
      <%= f.label :email, "E-Mail *" %>
      <%= f.text_field :email, class: "form-control", :required => true%>
    </div>

    <div class="actions">
      <%= f.submit "Kommentar abschicken", class: "button btn-primary" %>
    </div>
  <% end %>
