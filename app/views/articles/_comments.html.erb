<div class="article-comments">
  <h3>Kommentare</h3>
  <% @comments.each do |comment| %>
    <div class="comment">
      <p>
        <%= comment.name %>
        <em><small><%= "#{time_ago_in_words(comment.created_at)} ago" %></small></em>
        <% if signed_in? && current_user.moderator? %>
          <div>
            <%= link_to (' <span class="glyphicon glyphicon-remove"></span>').html_safe, article_comment_path(comment.article, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </p>
<!--  <div class="rated" data-score="<%= comment.rating %>">
</div> -->
      <p><%= comment.body %></p>
    </div>
  <% end %>
</div>
