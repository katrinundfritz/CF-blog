<div class="container article">
  <div class="row article_header">
    <div class="col-md-8 col-md-offset-2">
      <%= link_to 'Zurück zur Übersicht', articles_path %>
      <p class="date">
        <%= l @article.releasedate, format: :default %>
      </p>
      <h2>
        <%= @article.title %>
      </h2>
      <%= image_tag(@article.image_url, class: "img-responsive") %>
      <p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
        <%= @article.body %>
      </p>
      <% if signed_in? && current_user.author? %>
      <%= link_to 'Edit', edit_article_path(@article) %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
        <%= render 'comments' %>
        <%= render 'new_comment' %>
        <%= will_paginate @comments %>
    </div>
  </div>
</div>
