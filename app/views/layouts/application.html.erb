<!DOCTYPE html>
<html>
<head>
  <title>Collecting travels</title>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css?family=Rubik|Source+Sans+Pro" rel="stylesheet">

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Roboto" rel="stylesheet">

</head>

<body>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-warning">
      <%= alert %>
    </div>
  <% end %>
  <nav class="navbar navbar-light">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-left">
          <li class="<%= 'active' if current_page?(root_path) %>">
            <%= link_to "Blog", root_path, id: "blog" %>
          </li>
          <li class="<%= 'active' if current_page?(simple_pages_about_path) %>">
            <%= link_to "About", simple_pages_about_path, id: "about" %>
          </li>
          <li class="<%= 'active' if current_page?(simple_pages_contact_path) %>">
            <%= link_to "Kontakt", simple_pages_contact_path, id: "contact" %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="login">
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
          <li>
            <%= form_with(url: articles_path, method: 'get', local: true, class: "navbar-form") do |form| %>
            <div class="inner-addon right-addon">
              <%= form.text_field :q, id: 'q', class: 'q', value: params[:q], placeholder: "Suche..." %>
              <i class="glyphicon glyphicon-search"></i>
            </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

        <!--<form class="navbar-form navbar-right">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>--> <!-- end nav container-->
  </nav>
  <div class="stage">
    <p>Collecting travels</p>
  </div>

  <%= yield %>

    <footer>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </body>
</html>
